{
  "schemaVersion": 1,
  "id": "unsafe-world-random-access-detector",
  "version": "${version}",

  "name": "Unsafe World Random Access Detector",
  "description": "This is a mod that detects unsafe off-thread world random access, helping to find causes of \"Accessing LegacyRandomSource from multiple threads\" crash.",
  "authors": [
    "ishland"
  ],
  "contact": {
    "sources": "https://github.com/RelativityMC/unsafe-world-random-access-detector",
    "issues": "https://github.com/RelativityMC/unsafe-world-random-access-detector/issues"
  },

  "license": "MIT",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.ishland.uwrad.TheMod"
    ]
  },
  "mixins": [
    "unsafe-world-random-access-detector.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.11",
    "minecraft": ">=1.19",
    "java": ">=17"
  }
}
